---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

type Resource = {
  url: string;
  overrideTitle?: string;
  overrideDescription?: string;
  overrideImage?: string;
  tags?: string[];
  date?: string | Date;
};

const resources = (await getCollection('resources')) as Array<{ id: string; data: Resource }>;

// Pagination (5 per page)
const pageSize = 5;
const totalItems = resources.length;
const totalPages = Math.max(1, Math.ceil(totalItems / pageSize));
const rawPage = Number(Astro.url.searchParams.get('page') ?? '1');
const currentPage = Number.isFinite(rawPage) && rawPage >= 1 ? Math.min(rawPage, totalPages) : 1;
const start = (currentPage - 1) * pageSize;
const end = start + pageSize;
const pageResources = resources.slice(start, end);

// No live OG fetch; rely on CMS-provided overrides and placeholders

const truncate = (text: string, max: number) => {
  if (!text) return '';
  const str = String(text).trim();
  if (str.length <= max) return str;
  return str.slice(0, max - 1).trimEnd() + '...';
};

const cards = pageResources.map((entry) => {
  const { url, overrideTitle, overrideDescription, overrideImage } = entry.data;
  return {
    url,
    title: truncate(overrideTitle || url, 64),
    description: truncate(overrideDescription || '', 160),
    image: overrideImage || '',
    host: (() => {
      try { return new URL(url).host; } catch { return ''; }
    })()
  };
});
---

<Layout title="davi.cc | Resources">
  <section class="resources">
    <ul class="grid">
      {cards.map((card) => (
        <li class="card">
          <a class="card-link" href={card.url} target="_blank" rel="noopener noreferrer">
            <div class="thumb">
              {card.image
                ? <img src={card.image} width="120" height="80" alt={card.title} loading="lazy" decoding="async" referrerpolicy="no-referrer" />
                : <div class="thumb-fallback" aria-hidden="true"></div>}
            </div>
            <div class="meta">
              <h3>{card.title}</h3>
              {card.description && <p>{card.description}</p>}
              {card.host && <span class="host">{card.host}</span>}
            </div>
          </a>
        </li>
      ))}
    </ul>
    <nav class="pagination" aria-label="Pagination">
      <a
        class={`page-btn${currentPage === 1 ? ' is-disabled' : ''}`}
        href={`/resources${currentPage === 2 ? '' : `?page=${currentPage - 1}`}`}
        aria-disabled={currentPage === 1}
      >Newer</a>
      <span class="page-status">Page {currentPage} of {totalPages}</span>
      <a
        class={`page-btn${currentPage === totalPages ? ' is-disabled' : ''}`}
        href={`/resources?page=${currentPage + 1}`}
        aria-disabled={currentPage === totalPages}
      >Older</a>
    </nav>
  </section>

  <style>
    .resources {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .grid {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.9rem;
    }

    .card {
      border: 1px solid color-mix(in oklab, var(--color-border) 70%, transparent);
      border-radius: var(--border-radius-md);
      background: color-mix(in oklab, var(--color-surface) 96%, transparent);
      transition: background-color 180ms ease, border-color 180ms ease, transform 180ms ease;
    }
    .card:hover {
      background: color-mix(in oklab, var(--color-surface) 92%, transparent);
      border-color: color-mix(in oklab, var(--color-border) 85%, transparent);
      transform: translateY(-1px);
    }

    .card-link {
      display: grid;
      grid-template-columns: 120px 1fr;
      gap: 0.85rem;
      padding: 0.9rem;
      color: inherit;
      align-items: center;
      min-height: 112px;
    }

    .thumb {
      width: 120px;
      height: 80px;
      border-radius: var(--border-radius-sm);
      overflow: hidden;
      background-color: color-mix(in oklab, var(--color-bg) 92%, transparent);
      border: 1px solid color-mix(in oklab, var(--color-border) 70%, transparent);
      display: grid;
      place-items: center;
    }
    .thumb :global(img) {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .thumb-fallback {
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(45deg, #e5e7eb, #e5e7eb 10px, #f3f4f6 10px, #f3f4f6 20px);
    }

    .meta {
      display: grid;
      gap: 0.35rem;
    }
    .meta h3 {
      margin: 0;
      font-size: clamp(1rem, 0.6vw + 0.95rem, 1.15rem);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .meta p {
      margin: 0;
      color: var(--color-text-soft);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    .meta .host {
      font-size: 0.85rem;
      color: color-mix(in oklab, var(--color-text) 55%, transparent);
    }

    @media (max-width: 720px) {
      .card-link {
        grid-template-columns: 100px 1fr;
        min-height: 96px;
      }
      .thumb {
        width: 100px;
        height: 66px;
      }
    }

    .pagination {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      margin-top: 0.5rem;
    }
    .page-status {
      color: color-mix(in oklab, var(--color-text) 65%, transparent);
      font-size: 0.95rem;
    }
    .page-btn {
      text-decoration: none;
      font-weight: 600;
      font-size: 0.95rem;
      padding: 0.4rem 0.7rem;
      border-radius: 10px;
      border: 1px solid color-mix(in oklab, var(--color-border) 70%, transparent);
      background: color-mix(in oklab, var(--color-bg) 92%, transparent);
      color: inherit;
      transition: background-color 180ms ease, border-color 180ms ease, opacity 180ms ease;
    }
    .page-btn:hover {
      background: color-mix(in oklab, var(--color-bg) 82%, transparent);
      border-color: color-mix(in oklab, var(--color-border) 88%, transparent);
      opacity: 0.9;
    }
    .page-btn.is-disabled,
    .page-btn[aria-disabled="true"] {
      pointer-events: none;
      opacity: 0.5;
    }
  </style>
</Layout>

