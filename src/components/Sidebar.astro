---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import myProfilePic from "../assets/davi.jpeg"; 
---

<aside class="profile-card" aria-label="Perfil de Davi Carneiro">
  <div class="card-surface">
    <div class="profile-pic-frame">
      <Image
        src={myProfilePic}
        alt="Retrato de Davi Carneiro"
        class="profile-pic"
        width={140}
        height={140}
        format="webp"
      />
    </div>

    <h1>Davi Carneiro, MSc., PhDc.</h1>

    <nav class="main-nav" aria-label="Navegação principal">
      {(() => {
        const currentPath = Astro.url.pathname;
        const isBlog = currentPath.startsWith('/blog');
        return (
          <>
            <a href="/" class={currentPath === '/' ? 'is-active' : ''} data-i18n-key="nav.home">Início</a>
            <a href="/blog" class={isBlog ? 'is-active' : ''} data-i18n-key="nav.blog">Blog</a>
            <a href="/resources" class={currentPath.startsWith('/resources') ? 'is-active' : ''} data-i18n-key="nav.resources">Recursos</a>
            <a href="/contact" class={currentPath === '/contact' ? 'is-active' : ''} data-i18n-key="nav.contact">Contato</a>
          </>
        );
      })()}
    </nav>

    <div class="meta-grid">
      <div>
        <span class="meta-label" data-i18n-key="meta.base">Base</span>
        <strong data-i18n-key="meta.baseCity">João Pessoa, Brasil</strong>
      </div>
    </div>

    <div class="social-nav" aria-label="Redes sociais">
      <a href="https://github.com/daviccarneiro" target="_blank" rel="noopener noreferrer" aria-label="Github"><Icon name="mdi:github" /></a>
      <a href="https://www.linkedin.com/in/davicc/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn"><Icon name="mdi:linkedin" /></a>
      <a href="https://www.researchgate.net/profile/Davi-Clementino-Carneiro?ev=hdr_xprf" target="_blank" rel="noopener noreferrer" aria-label="ResearchGate"><Icon name="mdi:school-outline" /></a>
      <a href="/cv" aria-label="CV"><Icon name="mdi:file-document-outline" /></a>
    </div>

  </div>
</aside>

<style>
  .profile-card {
    position: sticky;
    top: var(--shell-padding);
    width: 100%;
    max-width: 360px;
    z-index: 10;
    pointer-events: auto;
  }

  .card-surface {
    position: relative;
    pointer-events: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
    padding: clamp(1.75rem, 2vw + 1.25rem, 2.5rem);
    border-radius: 24px;
    background: var(--color-surface);
    border: 1px solid color-mix(in oklab, var(--color-border) 75%, transparent);
    box-shadow: none;
    backdrop-filter: none;
    will-change: opacity, transform;
    animation: fade-in-soft 420ms ease-out both;
    transition: background-color 180ms ease, border-color 180ms ease, transform 180ms ease;
  }

  .profile-pic-frame {
    display: inline-flex;
    border-radius: 50%;
    padding: 0.5rem;
    background: color-mix(in oklab, var(--color-bg) 85%, transparent);
    border: 1px solid color-mix(in oklab, var(--color-border) 65%, transparent);
    box-shadow: none;
  }

  .profile-pic {
    width: clamp(120px, 10vw + 40px, 140px);
    height: clamp(120px, 10vw + 40px, 140px);
    border-radius: 50%;
    border: 4px solid #fff;
    box-shadow: none;
  }

  h1 {
    font-size: clamp(1.25rem, 0.8vw + 1.1rem, 1.6rem);
    text-align: center;
    white-space: normal;
    max-width: 100%;
    overflow: visible;
    text-overflow: clip;
    line-height: 1.2;
  }

  .main-nav {
    display: grid;
    width: 100%;
    grid-template-columns: repeat(2, minmax(120px, 1fr));
    gap: 0.75rem;
  }

  .main-nav a {
    text-align: center;
    text-decoration: none;
    font-weight: 600;
    padding: 0.65rem 0.75rem;
    border-radius: 12px;
    background: color-mix(in oklab, var(--color-bg) 92%, transparent);
    border: 1px solid color-mix(in oklab, var(--color-border) 70%, transparent);
    color: var(--color-text);
    transition: background-color 180ms ease, border-color 180ms ease;
    white-space: nowrap;
  }

  .main-nav a.is-active {
    background: color-mix(in oklab, var(--color-bg) 85%, transparent);
    border-color: color-mix(in oklab, var(--color-border) 85%, transparent);
  }

  .main-nav a:hover {
    background: color-mix(in oklab, var(--color-bg) 82%, transparent);
    border-color: color-mix(in oklab, var(--color-border) 88%, transparent);
  }

  .meta-grid {
    width: 100%;
    display: grid;
    gap: 0.75rem;
    grid-template-columns: 1fr;
    text-align: left;
  }

  .meta-label {
    display: block;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: color-mix(in oklab, var(--color-text) 65%, transparent);
    margin-bottom: 0.25rem;
  }

  .meta-grid strong {
    font-size: 0.95rem;
    font-weight: 600;
  }

  .social-nav {
    width: 100%;
    display: flex;
    justify-content: center;
    gap: 0.85rem;
  }

  .social-nav a {
    width: 42px;
    height: 42px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    border: 1px solid color-mix(in oklab, var(--color-border) 65%, transparent);
    color: var(--color-text);
    background: color-mix(in oklab, var(--color-bg) 92%, transparent);
    transition: background-color 180ms ease, color 180ms ease;
  }

  .social-nav a:hover {
    background: color-mix(in oklab, var(--color-bg) 82%, transparent);
    color: inherit;
  }

  .social-nav :global(svg) {
    width: 22px;
    height: 22px;
  }

  @media (max-width: 1060px) {
    .profile-card {
      position: static;
      width: 100%;
      max-width: none;
      margin: 0 auto 2rem;
      pointer-events: auto;
    }

    .card-surface {
      align-items: center;
    }

    .meta-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .profile-card {
      display: none;
    }

    .card-surface {
      border-radius: 20px;
    }

    .main-nav {
      flex-direction: column;
    }

    .main-nav a {
      width: 100%;
    }

    .social-nav {
      flex-wrap: wrap;
    }
  }
</style>
